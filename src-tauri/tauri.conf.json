{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "classtop",
  "version": "0.1.0",
  "identifier": "com.etaris.classtop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "features": ["pytauri/standalone"]
  },
  "app": {
    "windows": [
      {
        "label": "topbar",
        "title": "ClassTop TopBar",
        "url": "/#/topbar",
        "width": 1400,
        "height": 50,
        "minWidth": 800,
        "minHeight": 45,
        "maxHeight": 65,
        "x": 260,
        "y": 0,
        "resizable": false,
        "maximizable": false,
        "minimizable": false,
        "closable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "shadow": false,
        "center": false,
        "focus": false,
        "fullscreen": false,
        "visible": true,
        "titleBarStyle": "Overlay",
        "visibleOnAllWorkspaces": true
      },
      {
        "label": "main",
        "title": "ClassTop",
        "url": "/",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "x": 300,
        "y": 100,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "transparent": false,
        "shadow": true,
        "center": true,
        "focus": true,
        "fullscreen": false,
        "visible": false,
        "titleBarStyle": "Visible"
      }
    ],
    "security": {
      "csp": null
    }
  }
}
